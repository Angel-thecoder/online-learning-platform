<% if (events.length === 0) { %>
    <p>No events match your filters. Try a different selection.</p>
  <% } else { %>
    <% events.forEach(event => { %>
      <article class="course-card">
        <h2><a href="/events/<%= event.id %>"><%= event.title %></a></h2>
        <p><%= event.description %></p>
        <p><strong>Type:</strong> <%= event.type %></p>
        <p><strong>Date:</strong> 
          <%= new Date(event.date_time).toLocaleString('en-GB', {
            weekday: 'short',
            year: 'numeric',
            month: 'short',
            day: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
          }) %>
        </p>
        <p><strong>Instructor:</strong> <%= event.instructor_name %></p>
        <p><strong>Course:</strong> <%= event.course_name %></p>
      </article>
    <% }) %>
  <% } %>
  