<%- include('../partials/header') %>

<section id="instructors-page">
  <div class="page-header">
    <h1>Meet Our Instructors</h1>
  </div>

  <section class="courses-grid" aria-label="Instructor Profiles">
    <% instructors.forEach(instructor => { %>
      <article class="course-card">
        <h2><%= instructor.name %></h2>
        <p><%= instructor.bio %></p>
        <p><strong>Contact:</strong> <%= instructor.contact_details %></p>
        <p><strong>Subjects:</strong> <%= instructor.subjects_taught %></p>
      </article>
    <% }) %>
  </section>
</section>

<%- include('../partials/footer') %>
