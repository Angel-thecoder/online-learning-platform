<%- include('../partials/header') %>

<main id="quiz-cube-main">
  <section class="page-header">
    <h1>Quiz Cube Spinner</h1>
    <p>Click the cube to spin and answer a quiz question from a random course!</p>
  </section>

  <section class="cube-container" aria-label="3D Course Cube">
    <div id="cube" tabindex="0">
      <div class="face front">Web Dev</div>
      <div class="face back">SQL</div>
      <div class="face right">Cloud</div>
      <div class="face left">Design</div>
      <div class="face top">Security</div>
      <div class="face bottom">Networking</div>
    </div>
    <button id="spin-btn">ðŸŽ² Spin Cube</button>
  </section>

  <section id="quiz-area" aria-live="polite">
    <div id="quiz-question" class="hidden">
      <p id="question-text"></p>
      <div id="answer-buttons" role="group" aria-label="Answer choices"></div>
    </div>
    <p id="feedback" role="status" class="hidden"></p>
  </section>
</main>

